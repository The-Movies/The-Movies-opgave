<Window x:Class="The_movie_egen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:The_movie_egen.UI.ViewModel"
        xmlns:v="clr-namespace:The_movie_egen.UI.View"
        Title="The Movies - Administration"
        Height="760" Width="1350"
        Background="{StaticResource Brush.Primary}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="{StaticResource Brush.Surface}"
                CornerRadius="12"
                BorderBrush="{StaticResource Brush.Border}"
                BorderThickness="1"
                Padding="16">
            <Grid ClipToBounds="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Canvas Grid.ColumnSpan="2"
        Panel.ZIndex="0"
        IsHitTestVisible="False">
                    <!-- Venstre / stor -->
                    <Ellipse Fill="{StaticResource Brush.Spotlight}"
             Width="520" Height="260"
             Canvas.Left="-120" Canvas.Top="-70"
             Opacity="0.55"/>
                    <!-- Højre / mindre -->
                    <Ellipse Fill="{StaticResource Brush.Spotlight}"
             Width="420" Height="200"
             Canvas.Left="160" Canvas.Top="-40"
             Opacity="0.45"/>
                </Canvas>

                <!-- Indsætning af billede  -->
                <Image Grid.Column="0"
                       Height="180"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Panel.ZIndex="10"
                       Source="/UI/View/Pictures/DeStoreFilm.png"/>
            </Grid>
        </Border>

        <!-- BODY -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT NAV -->
            <Border Grid.Column="0"
                    Background="{StaticResource Brush.Surface}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Brush.Border}"
                    BorderThickness="1"
                    Padding="14">
                <StackPanel>
                    
                    <Button Content="Registrér film"
                            Command="{Binding NavigateRegisterCommand}"
                            Style="{StaticResource NavButton}"
                            Margin="0,0,0,8"/>

                    <Button Content="Biografer &amp; sale"
                            Command="{Binding NavigateCinemasCommand}"
                            Style="{StaticResource NavButton}"
                            Margin="0,0,0,8"/>

                    <Button Content="Planlæg måned"
                            Command="{Binding NavigateProgramCommand}"
                            Style="{StaticResource NavButton}" />
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <Border Grid.Column="2"
                    Background="{StaticResource Brush.Surface}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource Brush.Border}"
                    BorderThickness="1"
                    Padding="16">

                <!-- DataTemplates er defineret i App.xaml -->
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
